<%- include('../partials/header') %>
    <div class="container">
        <h1>
            <%= recipe.recipeTitle %>
        </h1>
        <img src="<%= recipe.recipeImage %>" class="img-fluid" alt="<%= recipe.recipeTitle %> Image">

        <h3>Descriptions:</h3>
        <p>
            <%= recipe.descriptions[0].recipeDescription %>
        </p>

        <h3>Ingredients:</h3>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Amount</th>
                        <th scope="col">Measurement</th>
                        <th scope="col">Ingredient Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i < recipe.ingredients.length; i++) { %>
                        <tr>
                            <td><%= recipe.ingredients[i].amount %></td>
                            <td><%= recipe.ingredients[i].measurement %></td>
                            <td><%= recipe.ingredients[i].ingredientName %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <h3>Instructions:</h3>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Step Number</th>
                        <th scope="col">Instruction</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i < recipe.instructions.length; i++) { %>
                        <tr>
                            <td><%= recipe.instructions[i].stepNum %></td>
                            <td><%= recipe.instructions[i].step %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <a href="<%= recipe.id %>/edit" class="btn btn-primary">Edit Recipe</a>
    </div>
<%- include('../partials/footer') %>