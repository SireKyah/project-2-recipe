<%- include('../partials/header') %>
    <div class="container">
        <h1>
            <%= recipe.recipeTitle %>
        </h1>
        <img src="<%= recipe.recipeImage %>" class="img-fluid" alt="<%= recipe.recipeTitle %> Image">

        <h3>Descriptions:</h3>
        <p>
            <%= recipe.descriptions[0].recipeDescription %>
        </p>

        <h3>Ingredients:</h3>
        <div class="row">
            <% for (let i=0; i < recipe.ingredients.length; i++) { %>
                <div class="col-md-4">
                    <p>
                        Amount: <%= recipe.ingredients[i].amount %><br>
                            Measurement: <%= recipe.ingredients[i].measurement %><br>
                                Ingredient Name: <%= recipe.ingredients[i].ingredientName %>
                    </p>
                </div>
                <% } %>
        </div>

        <h3>Instructions:</h3>
        <ul>
            <% for (let i=0; i < recipe.instructions.length; i++) { %>
                <li>
                    Step <%= recipe.instructions[i].stepNum %>: <%= recipe.instructions[i].step %>
                </li>
                <% } %>
        </ul>

        <a href="<%= recipe.id %>/edit" class="btn btn-primary">Edit Recipe</a>
    </div>
    <%- include('../partials/footer') %>