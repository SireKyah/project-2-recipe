<%- include('../partials/header') %>

    <body>
        <h1>List of Users</h1>

        <% users.forEach(user=> { %>
            <div class="user">
                <h2>
                    <%= user.username %>
                </h2>

                <h3>Recipes:</h3>
                <ul>
                    <% user.recipes.forEach(recipe=> { %>
                        <li>
                            <strong>
                                <%= recipe.recipeTitle %>
                            </strong>
                            <a href="/recipes/<%= recipe.id %>">
                                More Details
                            </a>
                            <a href="/recipes/<%= recipe.id %>/delete">
                                Delete Recipe
                            </a>
                            <img src="<%= recipe.recipeImage %>">
                        </li>
                        <% }); %>
                </ul>
            </div>
            <% }); %>

                <%- include('../partials/footer') %>